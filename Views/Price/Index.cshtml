@model IEnumerable<PanamaPrintApp.Models.Price>

@{
    ViewData["Title"] = "Index";
}

<header>
    <p align="right">
        @if (User.IsInRole("Администратор"))
        {
            <a asp-action="Create" class="btn btn-dark">Добавить позицию</a>
        }
    </p>
</header>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServicePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServicePrice)
            </td>
            <td>
                @if (User.IsInRole("Администратор"))
                {
                    <p align="right">
                        <a asp-action="Edit" class="btn btn-primary" style="width:auto">Редактировать</a>
                        <a asp-action="Delete" class="btn btn-danger" style="width:auto">Удалить</a>
                    </p>
                }
            </td>
        </tr>
}
    </tbody>
</table>
